<dialog id="incidentModal"
  class="p-4 bg-white rounded-lg shadow-[0_0_15px_0_rgba(0,0,0,0.1)] backdrop:backdrop-blur-sm backdrop:bg-transparent">

  <nav class="flex flex-row items-center justify-end">
    <!-- SVG d'une croix servant de bouton close -->
    <button id="closeIncidentModal" type="button"
      class="flex items-center justify-center w-8 h-8 text-sm text-gray-400 rounded-lg hover:bg-gray-200 hover:text-gray-900 ">
      <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
          d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
      </svg>
    </button>
  </nav>

  <section class="p-4">
    <h1 class="pb-2 mb-4 text-3xl font-bold text-center border-b">
      ⚠️<br>
      Signaler un incident
    </h1>

    <form class="flex flex-col justify-center" method="post" action="/incidents/create">
      <!-- titre -->
      <label for="title" class="mb-1">Titre</label>
      <input type="text" id="title" name="title" placeholder="soyez bref" required
        class="px-2 py-1 mb-4 bg-gray-100 border-2 border-gray-100 rounded-lg focus:outline-none focus:ring-0 focus:border-gray-400">
      <!-- description -->
      <label for="description" class="mb-1">Description</label>
      <textarea id="description" name="description" rows="8" cols="46" maxlength="400"
        placeholder="décrivez l'incident" required
        class="px-2 py-1 mb-4 bg-gray-100 border-2 border-gray-100 rounded-lg resize-none focus:outline-none focus:ring-0 focus:border-gray-400"></textarea>
      <!-- adresse -->
      <label class="mb-1" for="address">Adresse</label>
      <input type="text" id="address" name="address" placeholder="exemple: 21, Rue des Wallons" required
        class="px-2 py-1 mb-4 bg-gray-100 border-2 border-gray-100 rounded-lg focus:outline-none focus:ring-0 focus:border-gray-400">

      <input type="submit" value="Signaler"
        class="px-4 py-2 font-semibold text-white transition-all ease-in-out rounded-lg duration-450 main-gradient main-gradient-hover">
    </form>
  </section>
</dialog>

