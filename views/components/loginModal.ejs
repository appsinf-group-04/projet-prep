<dialog id="loginModal"
  class="p-4 bg-white rounded-lg shadow-[0_0_15px_0_rgba(0,0,0,0.1)] backdrop:backdrop-blur-sm backdrop:bg-transparent">
  <!-- L'interieur du modal se trouve ci-dessous -->
  <nav class="flex flex-row items-center justify-end">
    <!-- SVG d'une croix servant de bouton close -->
    <button id="closeLoginModal" type="button"
      class="flex items-center justify-center w-8 h-8 text-sm text-gray-400 rounded-lg hover:bg-gray-200 hover:text-gray-900 ">
      <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
          d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
      </svg>
    </button>

  </nav>

  <form action="/login" method="POST" class="flex flex-col">
    <div class="p-6 bg-white rounded-md w-96">
      <h1 class="text-3xl font-semibold text-center">S'identifier</h1>
      <hr class="mt-3">
      <div class="mt-3">
        <label for="username" class="block mb-2 text-base">Nom d'utilisateur</label>
        <input type="text" id="username" name="username" autofocus
          class="w-full px-2 py-1 text-base bg-gray-100 border-2 border-gray-100 rounded-lg focus:outline-none focus:ring-0 focus:border-gray-400"
          placeholder="Entrer votre nom d'utilisateur..." />
      </div>
      <div class="mt-3">
        <label for="password" class="block mb-2 text-base">Mot de passe</label>
        <input type="password" id="password" name="password"
          class="w-full px-2 py-1 text-base bg-gray-100 border-2 border-gray-100 rounded-lg focus:outline-none focus:ring-0 focus:border-gray-400"
          placeholder="Entrer votre mot de passe..." />
      </div>
      <div class="mt-5">
        <button type="submit"
          class="w-full py-1 font-semibold text-white rounded-md main-gradient hover:bg-transparent main-gradient-hover"><i
            class="fa-solid fa-right-to-bracket"></i>&nbsp;&nbsp;S'identifier</button>
      </div>
    </div>
    
  </form>
  <!-- L'interieur du modal se trouve ci-dessus-->
</dialog>

